module menu
{
    class EventLoop {
        attribute context = nil;
        attribute level = -1;
        method __init__(context)
        {
            self.context = context;
        }
        method enter()
        {
            if (level == -1)
                context.getUpdateContext().enterEventLoop(&level);
        }
        method leave()
        {
            if (level >= 0)
            {
                context.getUpdateContext().leaveEventLoop(level);
                level = -1;
            }
        }
    }
}